<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pdf_page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <!-- Used by BasePDFPagerAdapter. Kept for backwards compatibility -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Used by inheriting classes that implement zooming effect -->
    <es.voghdev.pdfviewpager.library.subscaleview.SubsamplingScaleImageView
        android:id="@+id/subsamplingImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"/>

</RelativeLayout>